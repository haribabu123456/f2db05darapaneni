extends layout

block content
  h1= title
  - var result = results
  div(class="container-fluid")
     div(class="row m-1")
        each item,index in result
            - let destination = `dispatch(\"/earbuds/update?id=${item._id}\")`
            div(class="row-sm-2", class="m-1") Earbuds - #{item.earbudsBrand}(#{item.earbudsColor}) is #{item.earbudsCost}
             button.btn( class="btn-primary ml-1", onclick= destination) Update
  script.
      function dispatch(path){
         window.location.href=path
      }
